{
    "main":"public/javascripts/uxwizz.js",
    "name":"UXWizz Analytics",
    "description": "Integrate UXWizz web analytics in your website. To use this app you need your own <a href='https://www.cloudflare.com/apps/uxwizz_web_analytics'>UXWizz instance</a> (Self-hosted).",
    "version": "1.0.0",
    "category": "analytics",
    "account": { },
    "billing": { },
    "config":{
        "details":{
            "Category": "Analytics",
            "Language": "English",
            "Price": "Free to install, free to use. Bring your own UXWizz server.",
            "Restrictions": "None",
            "CloudFlare": "<a href='http://www.cloudflare.com/terms' target='_blank'>Terms of use</a>"
        },
        "assets":{
            "logos" : {
                "200px": "./public/images/logo-200.png",
                "132px": "./public/images/logo-132.png"
            }
        },
        "interface": [
            {
                "id": "domain",
                "type": "string",
                "name": "UXWizz server url",
                "description": "The domain name of your UXWizz install."
            },
            {
                "id": "trackingjavascriptfile",
                "type": "select",
                "name": "Select Which Screen Recording Option you Prefer",
                "description": "If set to 'Full Session Recording', it will be full session recording, if set to 'Default Recording' it will be default tracker used.",
                "options": [
                    {
                        "label": "Full Session Recording",
                        "value": "ust-rr.min.js?v=4.4.0"
                    },
                    {
                        "label": "Default Recording",
                        "value": "ust.min.js"
                    }
                ]
            }
        ]
    }
}
